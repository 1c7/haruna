<?xml version="1.0" encoding="utf-8"?>
<component type="desktop-application">
    <name>Haruna Video Player</name>
    <id>com.georgefb.haruna</id>
    <launchable type="desktop-id">com.georgefb.haruna.desktop</launchable>
    <metadata_license>CC-BY-4.0</metadata_license>
    <project_license>GPL-3.0-or-later</project_license>
    <url type="homepage">https://github.com/g-fb/haruna</url>
    <url type="bugtracker">https://github.com/g-fb/haruna/issues</url>
    <url type="donation">https://www.patreon.com/georgefb</url>
    <summary>A Qt/QML video player built on top of libmpv.</summary>
    <description>
        <p>A Qt/QML video player built on top of libmpv.</p>
    </description>
    <releases>
        <release version="0.1.2" date="2020-05-13">
            <description>
                <p>Add audio tracks cycle up (Shift+3) and down (Shift+2) actions.</p>
                <p>Add subtitle tracks cycle up (j) and down (Shift+j) actions.</p>
                <p>Video title is now used as window title.</p>
                <p>Fix volume not being remembered between sessions.</p>
                <p>Fix volume slider background being the same as the footer background.</p>
                <p>Fix playlist not being able to scroll sometimes.</p>
                <p>Fix quit keyboard shortcut sometimes having to be triggered twice to work.</p>
            </description>
        </release>
        <release version="0.1.1" date="2020-03-09">
            <description>
                <p>Fix changing audio track from meniu.</p>
                <p>Fix icon.</p>
            </description>
        </release>
        <release version="0.1.0" date="2020-02-28">
            <description>
                <p>First release.</p>
            </description>
        </release>
    </releases>
    <screenshots>
        <screenshot type="default">
            <caption>Haruna</caption>
            <image>https://i.imgur.com/y1XUhs4.png</image>
        </screenshot>
    </screenshots>
    <content_rating type="oars-1.0" />
</component>
